{
  // editor
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode", // set default formatter
  "editor.fontSize": 20,
  "editor.fontLigatures": true,
  "editor.fontFamily": "'Fira Code', Consolas, 'Courier New', monospace,\"Apple Color Emoji\", \"Segoe UI Emoji\", \"Segoe UI Symbol\"",
  "editor.formatOnPaste": true,
  "editor.minimap.enabled": false,
  "editor.snippetSuggestions": "top",
  "editor.suggest.showSnippets": true,

  // window
  "window.zoomLevel": -1,

  // auto save
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 15000,

  //explorer
  "explorer.confirmDelete": false,

  //workbench
  // theme
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorCustomizations": {
    "statusBar.background": "#303030"
  },

  //vim
  "vim.easymotion": true,
  "vim.sneak": true,
  "vim.replaceWithRegister": true,
  "vim.camelCaseMotion.enable": true,
  "vim.changeWordIncludesWhitespace": true,
  "vim.smartRelativeLine": true,
  "vim.highlightedyank.enable": true,
  "vim.foldfix": true,
  "vim.handleKeys": {
    "<C-f>": false,
    "<C-b>": false,
    "<C-c>": false,
    "<C-v>": false,
    "<C-d>": false,
    "<C-y>": false
  },

  // prettier
  "prettier.requireConfig": true, // bắt buộc phải có file prettierrc

  // stylelint
  "stylelint.enable": true,
  "css.validate": false,
  "scss.validate": false,

  //eslint setting
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true
  },

  // template folder setting
  "folderTemplates.structures": [
    {
      "name": "React Typescipt Component",
      "customVariables": [],
      "omitParentDirectory": true,
      "structure": [
        {
          "fileName": "components/<FTName|capitalize>/<FTName|capitalize>.tsx",
          "template": "Typescript Functional Component"
        },
        {
          "fileName": "components/<FTName|capitalize>/<FTName|capitalize>.module.scss",
          "template": "SCSS"
        }
      ]
    },
    {
      "name": "React Typescipt Template Page",
      "customVariables": [],
      "omitParentDirectory": true,
      "structure": [
        {
          "fileName": "<FTName|capitalize>/<FTName|capitalize>.tsx",
          "template": "Typescript Functional Component"
        },
        {
          "fileName": "<FTName|capitalize>/<FTName|capitalize>.stories.tsx",
          "template": "Story Book Template Page"
        }
      ]
    }
  ],
  // template file setting
  "folderTemplates.fileTemplates": {
    "Typescript Functional Component": [
      "import React from 'react';",
      "",
      "import classes from './<FTName|capitalize>.module.scss';",
      "",
      "const <FTName|capitalize>:React.FC = () => (",
      "// Hook states",
      "",
      "// Hook effects",
      "",
      "// Constants",
      "",
      "// Action handlers",
      "",
      "// Renderers",
      "",
      "<div className={classes.<FTName|camelcase>Container}><FTName|capitalize></div>",
      ");",
      "",
      "<FTName|capitalize>.defaultProps = {};",
      "export default <FTName|capitalize>;"
    ],
    "SCSS": ["@import '../../scss/main';", ".<FTName|camelcase>Container{", "", "}"]
  }
}
